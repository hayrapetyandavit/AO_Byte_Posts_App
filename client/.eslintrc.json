{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {
    "indent": ["error", 2], // Use 2 spaces for indentation
    "quotes": ["error", "double"], // Use single quotes for strings
    "semi": ["error", "always"], // Require semicolons
    "no-console": "warn", // Warn about console.log and similar
    "react/prop-types": "off", // Turn off prop-types for TypeScript
    "@typescript-eslint/explicit-module-boundary-types": "off", // Turn off explicit module boundaries
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"]
  }
}
